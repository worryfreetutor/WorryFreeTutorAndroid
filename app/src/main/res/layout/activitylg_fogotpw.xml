<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/whitesmoke"
>
    <ImageView
            android:id="@+id/FogotPW_imageView"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/login_ic_wft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="78dp"
    />

    <EditText
            android:id="@+id/FogotPW_phone_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/login_cursor_color"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_imageView"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="35dp"
            android:paddingLeft="10dp"

    />
    <ImageButton
            android:id="@+id/FogotPW_clean1"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/login_clean"
            app:layout_constraintLeft_toRightOf="@id/FogotPW_phone_et"
            app:layout_constraintBottom_toBottomOf="@id/FogotPW_phone_et"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
    />


    <View
            android:id="@+id/FogotPW_view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_phone_et"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_view"
    />



    <EditText
            android:id="@+id/FogotPW_auth_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="false"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/login_cursor_color"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/FogotPW_phone_et"
            android:layout_marginTop="25dp"
            android:layout_marginRight="150dp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="10dp"
    />

    <ImageButton
            android:id="@+id/FogotPW_clean2"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/login_clean"
            app:layout_constraintLeft_toRightOf="@id/FogotPW_auth_et"
            app:layout_constraintBottom_toBottomOf="@id/FogotPW_auth_et"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:visibility="invisible"
    />

    <com.example.kaixuan.worryfreetutor.login.TimingButton
            android:id="@+id/FogotPW_auth_btn"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="获取验证码"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/FogotPW_clean2"
            android:clickable="true"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"

    />

    <View
            android:id="@+id/FogotPW_view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_clean2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_view"
    />

    <ImageButton
            android:id="@+id/FogotPW_pw_eye"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@drawable/login_imagebtn_eye"
            app:layout_constraintRight_toLeftOf="@id/FogotPW_pw_et"
            app:layout_constraintBottom_toBottomOf="@id/FogotPW_pw_et"
            android:layout_marginBottom="5dp"
    />
    <EditText
            android:id="@+id/FogotPW_pw_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:background="@null"
            android:hint="请输入密码"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/login_cursor_color"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_view2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="35dp"
            android:paddingLeft="10dp"

    />
    <ImageButton
            android:id="@+id/FogotPW_clean3"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/login_clean"
            app:layout_constraintLeft_toRightOf="@id/FogotPW_pw_et"
            app:layout_constraintBottom_toBottomOf="@id/FogotPW_pw_et"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
    />


    <View
            android:id="@+id/FogotPW_view3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_pw_et"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_view"
    />

    <ImageButton
            android:id="@+id/FogotPW_surepw_eye"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:background="@drawable/login_imagebtn_eye"
            app:layout_constraintRight_toLeftOf="@id/FogotPW_surepw_et"
            app:layout_constraintBottom_toBottomOf="@id/FogotPW_surepw_et"
            android:layout_marginBottom="5dp"
    />
    <EditText
            android:id="@+id/FogotPW_surepw_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:background="@null"
            android:hint="确认密码"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/login_cursor_color"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_view3"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="35dp"
            android:paddingLeft="10dp"

    />
    <ImageButton
            android:id="@+id/FogotPW_clean4"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/login_clean"
            app:layout_constraintLeft_toRightOf="@id/FogotPW_surepw_et"
            app:layout_constraintBottom_toBottomOf="@id/FogotPW_surepw_et"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible"
    />


    <View
            android:id="@+id/FogotPW_view4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/FogotPW_surepw_et"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_view"
    />

    <Button
            android:id="@+id/FogotPW_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="@color/whitesmoke"
            android:textSize="25sp"
            android:background="@drawable/login_button"
            app:layout_constraintTop_toBottomOf="@+id/FogotPW_surepw_et"
            android:layout_marginTop="25dp"
    />



</android.support.constraint.ConstraintLayout>
