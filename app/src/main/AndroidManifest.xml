<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kaixuan.worryfreetutor">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".login.ChooseActivity"
                  android:theme="@style/AppTheme.Launcher">

        </activity>

        <activity android:name=".login.StartActivity"
                  android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".login.LoginActivity"
                  android:theme="@style/AppTheme.Launcher"/>

        <activity android:name=".login.RegisterActivity"
                  android:theme="@style/AppTheme.Launcher"/>


        <activity android:name=".main.MainActivity"></activity>>
        <activity android:name=".discover.StudentDetailsActivity"></activity>
        <activity android:name=".discover.TeacherDetailsActivity"></activity>
        <activity android:name=".discover.StudentPostActivity"></activity>
        <activity android:name=".discover.TeacherPostActivity"></activity>
        <activity android:name=".discover.search.SearchActivity"></activity>
    </application>
    <!--android:theme="@style/Theme.AppCompat.Light.NoActionBar"去除自带标签栏-->

</manifest>